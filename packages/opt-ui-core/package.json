{
  "name": "@equinor/opt-ui-core",
  "description": "OPT UI - Design system for OPT.",
  "version": "6.13.3",
  "license": "MIT",
  "keywords": [
    "OPT",
    "UI",
    "design-system",
    "react",
    "react-components",
    "react-server-components"
  ],
  "author": {
    "name": "OPT Team",
    "url": "https://github.com/orgs/equinor/teams/opt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/equinor/opt-ui",
    "directory": "packages/opt-ui-core"
  },
  "bugs": {
    "url": "https://github.com/equinor/opt-ui/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": {
        "default": "./dist/index.mjs",
        "types": "./dist/index.d.mts"
      }
    },
    "./server-components": {
      "source": "./src/server-components.ts",
      "types": "./dist/server-components.d.ts",
      "require": "./dist/server-components.js",
      "import": {
        "default": "./dist/server-components.mjs",
        "types": "./dist/server-components.d.mts"
      }
    },
    "./style-system": {
      "source": "./src/style-system.ts",
      "types": "./dist/style-system.d.ts",
      "require": "./dist/style-system.js",
      "import": {
        "default": "./dist/style-system.mjs",
        "types": "./dist/style-system.d.mts"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:ts": "tsc --noEmit",
    "clean": "rimraf .turbo dist tsconfig.tsbuildinfo",
    "build": "tsup",
    "dev": "yarn build --watch"
  },
  "peerDependencies": {
    "@equinor/opt-ui-styled-system": "*",
    "@pandacss/dev": ">=0.18",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@equinor/opt-ui-base": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}
